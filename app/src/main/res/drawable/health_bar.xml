<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#FF0000" /> <!-- Dark Gray background -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Black Border -->
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#00FF00" /> <!-- Red for enemy health -->
            </shape>
        </clip>
    </item>

</layer-list>